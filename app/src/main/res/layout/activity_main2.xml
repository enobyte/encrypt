<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".menu.SendReceiveSMS">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/cardListSMS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.education.smsencrypt.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        android:src="@android:drawable/ic_dialog_email"
        android:visibility="gone"
        tools:fab_colorNormal="#0277bd"
        tools:fab_colorPressed="@color/colorPrimary"
        tools:fab_colorRipple="#0288d1" />

</FrameLayout>
